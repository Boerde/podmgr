<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
      <div class="field form-group">
        <%= f.label :feed_id %><br>
        <%= f.collection_select :feed_id, Feed.all, :id, :title, {}, {:class => "form-control"} %>
      </div>
      <div class="field form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %>
      </div>
      <div class="field form-group">
        <%= f.label :series %><br>
        <%= f.text_field :series, :class => "form-control", :placeholder => "Series"  %>
      </div>
      <div class="field form-group">
        <%= f.label :speaker %><br>
        <%= f.text_field :speaker, :class => "form-control", :placeholder => "Max Mustermann"  %>
      </div>
      <div class="field form-group">
        <%= f.label :summary %><br>
        <%= f.text_area :summary, :class => "form-control", :placeholder => "This podcast is about ..."  %>
      </div>
      <div class="field form-group">
        <%= f.label :Audiofile%><br>
        <%= f.file_field :audio_file, :class => "form-control-file" %>
      </div>
      <div class="field form-group">
        <%= f.label :publication_date %><br>
        <%= f.datetime_field :publication_date, :class => "form-control", :placeholder => "DD.MM.YYYY" %>
      </div>
      <div class="actions">
          <%= f.submit :class => "btn btn-primary" %>
      </div>
  </div>
<% end %>
